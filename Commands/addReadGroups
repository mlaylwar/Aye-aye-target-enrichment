java -jar /global/software/picard/picard1106/AddOrReplaceReadGroups.jar I=${k}_baits.bam O=${k}.bam RGID=${k} RGLB=1 RGPL=illumina RGPU=4 RGSM=${k}

module load samtools/1.3
samtools index ${k}.bam
